# Managed by Ansible

[Unit]
Description=A spotify playing daemon
Documentation=https://github.com/Spotifyd/spotifyd
Wants=sound.target
After=sound.target
Wants=network-online.target
After=network-online.target

[Service]
User={{ spotifyd_daemon_user }}
ExecStart={{ spotifyd_install_directory }}/bin/spotifyd --no-daemon --config-path {{ spotifyd_config_directory }}/spotifyd.conf
Restart=always
RestartSec=12

[Install]
WantedBy=default.target
